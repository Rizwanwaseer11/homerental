<%- include('../partials/header') %>
</head>
<body class="bg-light">
  <%- include('../partials/nav') %>
  
  <main class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow p-4" style="max-width: 400px; width: 100%;">
      <h2 class="mb-4 text-center text-primary">Login</h2>
      <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger py-2"><%= error %></div>
      <% } %>
      <form method="POST" action="/auth/login">
        <div class="mb-3">
          <label class="form-label">Email</label>
          <input type="email" name="email" class="form-control" placeholder="Email" required>
        </div>
        <div class="mb-3">
          <label class="form-label">Password</label>
          <input type="password" name="password" class="form-control" placeholder="Password" required>
        </div>
      <div class="mb-2">
        <a href="/auth/forgetpassword">Forget Password</a>
      </div>
        <div class="d-flex justify-content-between align-items-center">
          <button class="btn btn-primary px-4">Login</button>
          <a href="/auth/signup" class="small">Create account</a>
        </div>
      </form>
    </div>
  </main>
  <script src="/bootstrap.bundle.min.js"></script>
</body>


</html>
