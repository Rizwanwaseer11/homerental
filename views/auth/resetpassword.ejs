<%- include('../partials/header') %>
</head>
<body class="bg-light">
  <%- include('../partials/nav') %>

  <main class="container d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="card shadow-lg p-4 rounded-4" style="max-width: 450px; width: 100%;">
      <div class="text-center mb-4">
        <i class="bi bi-key-fill text-primary fs-1"></i>
        <h3 class="text-primary mt-2">Reset Your Password</h3>
        <p class="text-muted small">Enter your new password below</p>
      </div>

      <form action="/auth/reset-password/<%= token %>" method="POST">
        <div class="mb-3">
          <label for="password" class="form-label fw-semibold">New Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control form-control-lg"
            placeholder="Enter new password"
            required
            minlength="6"
          >
        </div>

        <button type="submit" class="btn btn-primary w-100 py-2 rounded-3">
          <i class="bi bi-check-circle me-1"></i> Update Password
        </button>
      </form>

      <div class="text-center mt-4">
        <a href="/login" class="text-decoration-none">
          <i class="bi bi-arrow-left-circle me-1"></i> Back to Login
        </a>
      </div>
    </div>
  </main>
</body>
</html>
