<% notifications.forEach(notification => { %>
  <div class="card shadow mb-3">
    <div class="card-body">
      <h5 class="card-title text-primary mb-3">
        <%= notification.bookingId ? notification.bookingId.propertyId.title : 'No property' %>
      </h5>

      <p><strong>Status:</strong> <%= notification.bookingId ? notification.bookingId.status : 'N/A' %></p>
      <p><strong>Message:</strong> <%= notification.message %></p>

      <div class="d-flex gap-2">
        <a href="<%= notification.bookingUrl || '#' %>" class="btn btn-primary btn-sm">View Details</a>

        <form action="/notifications/<%= notification._id %>?_method=DELETE" method="POST"
              onsubmit="return confirm('Are you sure you want to delete this notification?');">
          <button type="submit" class="btn btn-danger btn-sm">
            <i class="bi bi-trash"></i> Delete
          </button>
        </form>
      </div>
    </div>
  </div>
<% }) %>
