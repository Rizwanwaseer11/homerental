<%- include('../partials/header') %>
</head>
<body class="bg-light">
  <%- include('../partials/nav', { currentUserId, currentUserRole }) %>
  <main class="container my-5">
    <div class="card shadow-lg mb-4">
      <div class="row g-0">
        <div class="col-md-5">
          <% const mainImage = property.images && property.images.length > 0 ? property.images[0] : '/placeholder.png'; %>
          <img src="<%= mainImage %>" class="img-fluid rounded-start w-100" alt="Property image" style="object-fit:cover;max-height:350px;">
          
          <% if (property.images && property.images.length > 1) { %>
            <div class="d-flex flex-wrap gap-2 justify-content-center p-2">
              <% property.images.slice(1, 4).forEach(img => { %>
                <img src="<%= img %>" alt="Property image" class="rounded border" style="width:60px;height:60px;object-fit:cover;">
              <% }) %>
            </div>
          <% } %>
        </div>

        <div class="col-md-7">
          <div class="card-body">
            <h1 class="card-title display-6 mb-2 text-primary"><%= property.title %></h1>
            <p class="card-subtitle text-muted mb-2">
              <%= property.location?.city || 'Unknown' %> • <%= property.category || 'N/A' %>
            </p>

            <% if (property.location && (property.location.fullLocation || property.location.address)) { %>
              <div class="mb-3">
                <% if (property.location.fullLocation) { %>
                  <p class="mb-1"><strong>Complete Location:</strong> <%= property.location.fullLocation %></p>
                  <iframe width="100%" height="200" style="border:0;border-radius:8px;" loading="lazy"
                    allowfullscreen referrerpolicy="no-referrer-when-downgrade"
                    src="https://www.google.com/maps?q=<%= encodeURIComponent(property.location.fullLocation) %>&output=embed"></iframe>
                <% } else { %>
                  <p class="mb-1">
                    <strong>Address:</strong>
                    <%= property.location.address %>
                    <% if (property.location.city) { %>, <%= property.location.city %><% } %>
                    <% if (property.location.state) { %>, <%= property.location.state %><% } %>
                  </p>
                  <iframe width="100%" height="200" style="border:0;border-radius:8px;" loading="lazy"
                    allowfullscreen referrerpolicy="no-referrer-when-downgrade"
                    src="https://www.google.com/maps?q=<%= encodeURIComponent(property.location.address + (property.location.city ? ', ' + property.location.city : '') + (property.location.state ? ', ' + property.location.state : '')) %>&output=embed"></iframe>
                <% } %>
              </div>
            <% } %>

            <p class="lead mb-2"><%= property.description %></p>

            <% if (property.amenities && property.amenities.length) { %>
              <div class="mb-2">
                <% property.amenities.forEach(a => { %>
                  <span class="badge bg-primary me-1 mb-1"><%= a %></span>
                <% }) %>
              </div>
            <% } %>

            <ul class="list-group list-group-flush mb-3">
              <li class="list-group-item">
                <strong>Price:</strong> Rs <%= property.price %>
                <span class="text-muted">/<%= property.rentType === 'perNight' ? 'night' : 'month' %></span>
              </li>
              <li class="list-group-item"><strong>Status:</strong> <%= property.status %></li>
              <li class="list-group-item">
                <strong>Bedrooms:</strong> <%= property.bedrooms %> |
                <strong>Baths:</strong> <%= property.bathrooms %>
              </li>
              <% if (typeof property.rating !== 'undefined') { %>
                <li class="list-group-item"><strong>Rating:</strong> <%= property.rating %> / 5</li>
              <% } %>
              <% if (property.featured) { %>
                <li class="list-group-item"><span class="badge bg-warning text-dark">Featured</span></li>
              <% } %>
            </ul>

            <!-- ✅ Owner and Renter Buttons -->
            <div class="mb-3">
              <% if (currentUserId && currentUserRole === 'renter') { %>
                <form method="POST" action="/cart/add/<%= property._id %>">
                  <button class="btn btn-outline-primary w-100 mb-2">Add to Cart</button>
                </form>
                <form method="POST" action="/bookings/create/<%= property._id %>" class="mt-2">
                  <button class="btn btn-success w-100">Book Now</button>
                </form>
              <% } else if (!currentUserId) { %>
                <a href="/auth/login" class="btn btn-dark w-100">Login to book</a>
              <% } %>

              <% if (currentUserRole === 'owner' && String(property.ownerId) === String(currentUserId)) { %>
                <div class="mt-3 d-flex gap-2">
                  <a href="/properties/<%= property._id %>/edit" class="btn btn-outline-warning w-50">
                    <i class="bi bi-pencil"></i> Edit
                  </a>
                  <form action="/properties/<%= property._id %>?_method=DELETE" method="POST" class="w-50">
                    <button type="submit" class="btn btn-outline-danger w-100" onclick="return confirm('Are you sure you want to delete this property?');">
                      <i class="bi bi-trash"></i> Delete
                    </button>
                  </form>
                </div>
              <% } %>
            </div>

            <% if (property.location && property.location.city) { %>
              <div class="text-muted">Location: <%= property.location.city %>, <%= property.location.state || '' %></div>
            <% } %>

            <% if (property.featured) { %>
              <div class="badge bg-warning text-dark mt-2">Featured</div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </main>
</body>
</html>
